<div class="mx-auto md:w-2/3 w-full">
  <h1 class="font-bold text-4xl">Editing game</h1>

  <% if params[:attribute].present? %>
    <%= render "inline_attribute_form", game: @game %>
  <% else %>
    <%= render "form", game: @game %>
  <% end %>

  <%= link_to "Show this game", @game, class: "ml-2 rounded-lg py-3 px-5 bg-gray-100 inline-block font-medium" %>
  <%= link_to "Back to games", games_path, class: "ml-2 rounded-lg py-3 px-5 bg-gray-100 inline-block font-medium" %>
</div>
